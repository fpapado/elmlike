{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "declaration": true,
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "rootDirs": ["src"],
    "outDir": "ts-build",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "baseUrl": "./"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
